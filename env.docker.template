# ==============================================
# DOCKER PRODUCTION ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env for Docker deployment

# Database Configuration
POSTGRES_DB=futbol_clinic
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres123
DATABASE_URL=postgresql://postgres:postgres123@database:5432/futbol_clinic

# JWT Configuration - GENERATE A STRONG SECRET FOR PRODUCTION
JWT_SECRET=your-super-secure-production-jwt-secret-at-least-32-characters-long-for-aws-deployment

# Application URLs - Update with your AWS server IP/domain
FRONTEND_URL=http://your-aws-ip:3000
BACKEND_URL=http://your-aws-ip:4000
NEXT_PUBLIC_API_URL=http://your-aws-ip:4000/api
NEXT_PUBLIC_BACKEND_URL=http://your-aws-ip:4000

# Docker Environment Flag
DOCKER_ENV=true

# File Storage - Local storage or configure AWS S3
BLOB_READ_WRITE_TOKEN=local-storage-token

# Email Configuration (Optional)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# Node Environment
NODE_ENV=production

# Database Connection Pool Settings
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000

# Redis Configuration (Optional)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis123

# Ports
PORT=4000
NEXT_PORT=3000
